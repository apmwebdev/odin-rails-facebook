<h1><%= image_tag(get_gravatar_url(@user.email, 160)) %><%= name(@user) %></h1>

<p><%= @user.email %></p>
<p>Admin: <%= @user.admin? %></p>
<% if @user != current_user %>
  <%= render choose_friend_action(@user, current_user), other_user: @user %>
<% end %>

<h2>Profile</h2>
<%= render "user_profiles/profile" %>

<h2>Friends</h2>
<% @user.friends.each do |friend| %>
  <%= render "user_compact", user: friend %>
<% end %>