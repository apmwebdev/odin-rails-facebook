<%= form_with model: @profile, method: :put do |f| %>
  <%= f.hidden_field :user_id, value: @profile.user_id %>
  <%= f.hidden_field :birthday, value: "" %>
  <%= f.hidden_field :gender, value: "" %>
  <%= f.hidden_field :bio, value: "" %>
  <%= f.hidden_field :country, value: "" %>
  <%= f.hidden_field :city, value: "" %>

  <div>
    <%= f.label :birthday %>
    <%= f.date_field :birthday %>
  </div>
  <div>
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  </div>
  <div>
    <%= f.label :bio, "About me" %>
    <%= f.text_area :bio %>
  </div>
  <div>
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.submit name: nil %>
    <%= link_to "Cancel", @profile %>
  </div>
<% end %>