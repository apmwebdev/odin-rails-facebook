<div id="<%= dom_id post %>" class="post">
  <p><%= render "users/user_inline", user: post.author, image_size: 40 %></p>
  <p><%= link_to post.created_at, post %></p>
  <p><%= post.content %></p>

  <%= turbo_frame_tag id="#{dom_id(post)}_likes" do %>
    <%= render "likes/form", likeable: post %>
  <% end %>

  <div id="<%= dom_id post %>_comments">
    <% post.comments.each do |comment| %>
      <%= render comment %>
    <% end %>
  </div>
  <%= turbo_frame_tag id="#{dom_id(post)}_new_comment" do %>
    <%= render "comments/new", commentable: post %>
  <% end %>
</div>
